{
  "name": "leaky-bucket",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "build": "pnpm -r build",
    "build:server": "pnpm --filter ./apps/server run build",
    "build:storage": "pnpm --filter ./apps/storage run build",
    "build:docker:server": "docker build -f apps/server/Dockerfile -t server:latest . 2>&1 | tee docker_server_log.txt",
    "build:docker:storage": "docker build -f apps/storage/Dockerfile -t storage:latest . 2>&1 | tee container_storage_log.txt",
    "start": "pnpm -r start",
    "start:server": "pnpm --filter ./apps/server run start",
    "start:storage": "pnpm --filter ./apps/storage run start",
    "dev:server": "pnpm --filter ./apps/server run dev",
    "test": "pnpm -r test",
    "test:server": "pnpm --filter ./apps/server run test",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "lint:server": "pnpm --filter ./apps/server lint:fix",
		"format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky",
    "clean": "pnpm -r exec -- rm -rfv dist node_modules && rm -rfv node_modules",
    "common": "pnpm --filter common"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.12.1+sha512.f0dda8580f0ee9481c5c79a1d927b9164f2c478e90992ad268bbb2465a736984391d6333d2c327913578b2804af33474ca554ba29c04a8b13060a717675ae3ac",
  "engines_node": ">=23.10.0",
  "type": "module",
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/css": "^0.7.0",
    "@eslint/js": "^9.29.0",
    "@eslint/json": "^0.12.0",
    "@eslint/markdown": "^6.5.0",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-define-config": "^2.1.0",
    "eslint-plugin-prettier": "^5.4.1",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.5.2",
    "prettier": "^3.5.3",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.0"
  },
  "lint-staged": {
    "**/*.{js,ts,tsx}": [
      "eslint --fix"
    ],
    "**/*": "prettier --write --ignore-unknown"
  }
}
