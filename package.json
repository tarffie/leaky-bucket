{
  "name": "leaky-bucket",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "build": "pnpm -r build",
    "build:backend": "pnpm --filter ./apps/backend run build",
    "build:docker:backend": "sh build_and_report_backend.sh",
    "start:backend": "pnpm --filter ./apps/backend run start",
    "dev:backend": "pnpm --filter ./apps/backend run dev",
    "test": "pnpm -r test",
    "test:backend": "pnpm --filter ./apps/backend run test",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky",
    "postinstall": "pnpm --filter common build",
    "clean": "pnpm -r exec -- rimraf dist node_modules",
    "common": "pnpm --filter common"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.7.0",
  "engines_node": ">=23.10.0",
  "type": "module",
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@eslint/css": "^0.7.0",
    "@eslint/js": "^9.25.1",
    "@eslint/json": "^0.12.0",
    "@eslint/markdown": "^6.4.0",
    "eslint": "^9.25.1",
    "eslint-define-config": "^2.1.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.5.1",
    "prettier": "^3.5.3",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.1"
  },
  "lint-staged": {
    "**/*.{js,ts,tsx}": [
      "eslint --fix"
    ],
    "**/*": "prettier --write --ignore-unknown"
  }
