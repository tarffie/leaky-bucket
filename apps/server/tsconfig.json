{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "types": ["jest", "node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@tests/*": ["src/tests/*"],
      "@woovi/common": ["../../packages/common/dist/index"],
      "@woovi/common/*": ["../../packages/common/dist/*"]
    }
  },
  "include": ["src/**/*", "tests/**/*", "**/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}
