{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "sourceMap": true,
    "allowJs": true,
    "paths": {
      "@woovi/common/*": ["../../packages/common/src/*"],
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*", "../vite.config.ts"],
  "exclude": ["node_modules", "dist"]
}

